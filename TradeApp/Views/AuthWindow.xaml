<Window x:Class="TradeApp.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeApp.Views"
        mc:Ignorable="d"
        Title="Authentification" Height="450" Width="450" ResizeMode="CanMinimize">
    <Grid Background="Salmon">
        <TextBlock Text="TradeApp Authentification" Margin="80,55,80,320" FontSize="22" FontWeight="Black" FontStyle="Italic" Foreground="DarkCyan"/>
        <StackPanel VerticalAlignment="Top"
                    Width="320"
                    HorizontalAlignment="Center" 
                    Height="200" Margin="0,160,0,0">
            <TextBlock Text = "Login" FontStyle="Oblique" FontSize="20" FontWeight="Black" Foreground="DarkCyan"/>
            <TextBox Name="TxbxLgn"/>
            <TextBlock Text = "Password" FontStyle="Oblique" FontSize="20" FontWeight="Black" Foreground="DarkCyan"/>
            <TextBox Name="TxbxPswd"/>
            <Button Height="20" Margin="20" Content="Sign in" FontWeight="Bold" Click="ButnSignIn_Click"/>
        </StackPanel>
    </Grid>
</Window>
